<div id="login-info">
    @if (Request.IsAuthenticated)
    {
        <p>@Html.ActionLink(User.Identity.Name, "Index", "Account", routeValues: null, htmlAttributes: new { id = "user-name", title = "Личный кабинет" })</p>
        <p>@using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
        }</p>
    }
    else
    {
        <p>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "reg-link" })</p>
        <p>@Html.ActionLink("Вход", "Login", new { controller = "Account" }, htmlAttributes: new { id = "log-link" })</p>
    }
</div>