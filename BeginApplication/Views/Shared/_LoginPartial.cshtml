<div id="login-info">
    @if (Request.IsAuthenticated)
    {
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(User.Identity.Name, "Index", "Account", routeValues: null, htmlAttributes: new { id = "user-name", title = "Личный кабинет" })
            </li>
            <li>
                @using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
                }
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Вход", "Login", new { controller = "Account" }, htmlAttributes: new { id = "log-link" })
            </li>
            <li>
                @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "reg-link" })
            </li>
        </ul>
    }
</div>