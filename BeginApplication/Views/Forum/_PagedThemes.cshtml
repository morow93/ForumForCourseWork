@model BeginApplication.Models.ThemesWithSectionModel

@if (Model != null)
{
    <div class="themes">
        @foreach (var theme in Model.PagedThemes)
        {
            <div class="theme">
                @Html.Partial("_Theme", theme)
                <div class="theme-sub-part">
                    @if (Roles.IsUserInRole("moder") || Roles.IsUserInRole("admin"))
                    {                        
                        <input class="del-theme-ref" type="button" value="Удалить тему" onclick="location.href='@Url.Action("RemoveTheme", "Forum", new { id = theme.ThemeId, section = Model.Section.SectionId, path = Request.Url.AbsoluteUri })'" />
                    }
                </div>           
            </div>
        }
    </div>
}
