@model BeginApplication.Models.AddThemeModel

@{
    ViewBag.Title = "Добавить тему";
}

<h2>Добавить тему</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "add-theme-form" }))
{
    @Html.ValidationSummary()

    <fieldset>
        <legend>Форма добавления темы</legend>

        <div class="editor-label">
            @Html.LabelFor(m => m.ThemeTitle)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.ThemeTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.ThemeText)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(m => m.ThemeText)
        </div>

        @Html.Hidden("SectionId", Model.SectionId)
        @Html.Hidden("UserId", Model.UserId)
        <input type="submit" value="Добавить тему" />
    </fieldset>
}
