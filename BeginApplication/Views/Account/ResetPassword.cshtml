@model BeginApplication.Models.RecoveryPasswordModel

@{
    ViewBag.Title = "Сброс пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span class="good-temp-data">@TempData["Message"]</span>

<h2>Сбросить пароль</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Форма сброса пароля</legend>

        <div class="editor-label">
            @Html.LabelFor(m => m.NewPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.NewPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>

        <div class="hidden-values">
            @Html.HiddenFor(m => m.UserName)
            @Html.HiddenFor(m => m.Token)
        </div>
        
        <input type="submit" value="Применить изменения" />
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}