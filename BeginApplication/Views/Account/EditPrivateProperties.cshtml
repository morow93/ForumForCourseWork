@model BeginApplication.Models.PrivatePropertiesModel

@{
    ViewBag.Title = "Настроки приватности";
}

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Настройки приватности</legend>

        <div class="editor-label">
            @Html.LabelFor(m => m.ShowEmail)
        </div>
        <div class="editor-field">     
            @Html.CheckBoxFor(m => m.ShowEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Mobile)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Mobile)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.ShowMobile)
        </div>
        <div class="editor-field">           
            @Html.CheckBoxFor(m => m.ShowMobile)
        </div>

        <input type="submit" value="Применить настройки" />
    </fieldset>
}