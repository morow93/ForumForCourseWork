@model BeginApplication.Models.LoginModel

@{
    ViewBag.Title = "Вход";
}

<h4>Выполнить вход</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        @Html.TextBoxFor(m => m.UserName)
        @Html.ValidationMessageFor(m => m.UserName)
        <p></p>
        @Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
        <p></p>
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })

        <button class="btn btn-lg btn-primary btn-block" type="submit">Выполнить вход</button>
        <p></p>
        <p>@Html.ActionLink("Регистрация", "Register")</p>
        <p>@Html.ActionLink("Забыли пароль?", "ForgotPassword")</p>
    </fieldset>
}

<script>
    $('input:text').prop("class", "form-control");
    $('input:password').prop("class", "form-control");
    $('input:text').prop("placeholder", "Email");
    $('input:password').prop("placeholder", "Пароль");
    $('form').prop("class", "form-signin");
    
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}